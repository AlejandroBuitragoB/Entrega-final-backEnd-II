<h1>Endurance Fit</h1>

<div>

{{#each products.payload}}
<div>
    <p>ID: {{this._id}}</p>
    <p>{{this.title}}</p>
    <p>{{this.description}}</p>
    <p> $ {{this.price}}</p>
    <p>{{this.img}}</p>
    <p>{{this.code}}</p>
    <p>{{this.stock}}</p>
<hr>
</div>

<button class="cart-button" onclick="addToCart('{{this._id}}')"> <i>Agregar al carrito</i> </button>

{{/each}}



<div class="pagination">
    <span>Page Limit: {{products.limit}}</span><br>
    
    {{#if products.query}}
    <span>Filter by: {{products.query}}</span><br>
    {{/if}}

    {{#if products.hasPrevPage}} 
    <a href="?page={{products.prevPage}}&limit={{products.limit}}{{#if products.query}}&query={{products.query}}{{/if}}">Previous</a>
    {{/if}}

    <span>Page {{products.page}} out of {{products.totalPages}}</span>

    {{#if products.hasNextPage}} 
    <a href="?page={{products.nextPage}}&limit={{products.limit}}{{#if products.query}}&query={{products.query}}{{/if}}">Next</a>
    {{/if}}
</div>

</div>

<script src="js/main.js"></script>